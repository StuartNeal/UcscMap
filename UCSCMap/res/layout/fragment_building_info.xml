<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_building_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1B521"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/building_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/place_holder" />

        <TextView
            android:id="@+id/building_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/building_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/go_to_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/building_image"
            android:layout_marginBottom="38dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/building_image"
            android:text="@string/button_go_to_map" 
            android:textStyle="bold"/>

    </RelativeLayout>

	<RelativeLayout
        android:layout_width="fill_parent" 
        android:layout_height="0dp"
        android:orientation="vertical" 
        android:layout_weight="1">
        
        <ListView
  			android:id="@+id/list_building_classrooms"
  			android:layout_width="match_parent"
  			android:layout_height="wrap_content"
  			android:dividerHeight="5.0sp" >
		</ListView>
		
    </RelativeLayout>
    

</LinearLayout>
