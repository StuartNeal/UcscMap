<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00458C"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ucscmap.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/editTextMain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:singleLine="true"
        android:text="@string/field_text_username" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextMain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMain1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textViewMain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextMain2"
        android:layout_alignBottom="@+id/editTextMain2"
        android:layout_alignLeft="@+id/editTextMain1"
        android:layout_marginLeft="14dp"
        android:text="@string/field_text_password"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageViewMain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/textViewMain3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMain2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/forgot_password"
        android:onClick="onForgotPasswordPressed"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/buttonMain1"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editTextMain2"
        android:layout_alignRight="@+id/textViewMain3"
        android:layout_below="@+id/editTextMain2"
        android:onClick="@string/button_callback_login"
        android:text="@string/button_text_login" />

    <TextView
        android:id="@+id/textViewMain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMain3"
        android:layout_below="@+id/buttonMain1"
        android:layout_marginTop="28dp"
        android:onClick="onCreateAccountPressed"
        android:text="@string/create_account"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo" />

    <CheckBox
        android:id="@+id/checkBoxMain1"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/buttonMain1"
        android:layout_alignBottom="@+id/buttonMain1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textViewMain2"
        android:text="@string/auto_login"
        android:textSize="12sp" />

</RelativeLayout>
